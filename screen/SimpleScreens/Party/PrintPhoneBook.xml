<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-include="false" standalone="true">

    <actions>
        <!--presumably, this should load the data used for printing-->
        <!--<service-call name="mantle.account.InvoiceServices.get#InvoicePrintInfo"
                      in-map="[invoiceId:invoiceId]" out-map="context"/>-->
        
        <!--<entity-find entity-name="mantle.account.invoice.InvoiceItem" list="invoiceItemList"/>-->
        <entity-find entity-name="mantle.party.PartyDetailAndRole" list="supplierList">
            <econdition field-name="roleTypeId" operator="equals" value="Supplier"/>
            <econdition field-name="partyTypeEnumId" operator="equals" value="PtyOrganization"/>
            <econdition field-name="disabled" value="N" or-null="true"/>
            <econdition field-name="excludeFromPdf" value="N" or-null="true"/>
            <order-by field-name="organizationName"/>
        </entity-find>

        <entity-find entity-name="mantle.party.contact.ContactMechPurpose" list="enumContactTypes">
            <econdition field-name="contactMechTypeEnumId" operator="in" value="CmtEmailAddress,CmtTelecomNumber"/>
            <select-field field-name="description"/>
            <select-field field-name="contactMechPurposeId"/>
        </entity-find>

        <set field="translatedContactTypes" type="NewMap" from="[:]"/>

        <script>
            <![CDATA[
                for (sci in enumContactTypes) {
                    translatedContactTypes.put(sci.contactMechPurposeId, ec.l10n.localize(sci.description))
                }
                //ec.logger.info("translatedContactTypes = ${translatedContactTypes.toString()}")
            ]]>
        </script>
        <log level="info" message="logoPath in printPhoneBook.xml is : ${logoPath}"/>
        <log message="Suppliers loaded ${supplierList.size()}" level="info"/>
    </actions>
    <widgets>
        <render-mode>
            <text type="xsl-fo" location="component://SimpleScreens/template/party/PhoneBook.xsl-fo.ftl"
                  template="true" encode="false" no-boundary-comment="true"/>
        </render-mode>
    </widgets>
</screen>