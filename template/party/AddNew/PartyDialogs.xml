<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.0.xsd"
        default-menu-include="false">

    <!-- NOTE: this screen is not meant to be rendered, it is just a library of forms to extend in other screens -->
    <!--<parameter name="partyId"/>-->

    <transition name="addNewSupplier">
        <service-call name="mantle.party.PartyServices.create#Organization" in-map="context+[roleTypeId:'Supplier']"/>

        <conditional-response type="screen-last">
            <condition>
                <expression>optionSelected=="forget"</expression>
            </condition>
        </conditional-response>

        <default-response url="../EditParty"/>
    </transition>

    <actions>

    </actions>

    <widgets>
        <form-single name="AddNewSupplierForm" transition="addNewSupplier">
            <field name="optionSelected">
                <default-field>
                    <hidden/>
                </default-field>
            </field>

            <field name="organizationName">
                <default-field>
                    <text-line/>
                </default-field>
            </field>

            <field name="dropDownSubmit">
                <default-field title="">
                    <render-mode>
                        <text type="html">
                            <![CDATA[
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-primary dropdown-toggle" type="button" name="btn_DropDown" id="btn_DropDownSubmit" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                        <i class="glyphicon glyphicon-plus"></i>
                                        Add
                                    <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="btn_DropDownSubmit">
                                        <li><a id="btn_DropDownSubmit_option_1" href="#">Create and Edit</a></li>
                                        <li><a id="btn_DropDownSubmit_option_2" href="#">Create</a></li>
                                    </ul>
                                </div>

                                <script>
                                    $('#btn_DropDownSubmit_option_1').click(function() {
                                        $('#AddNewSupplierForm_optionSelected').val("edit");

                                        $(this).closest('form').submit()
                                    });
                                    $('#btn_DropDownSubmit_option_2').click(function() {
                                        $('#AddNewSupplierForm_optionSelected').val("forget");

                                        $(this).closest('form').submit()
                                    });
                                </script>
                            ]]>
                        </text>
                    </render-mode>
                </default-field>
            </field>
        </form-single>
    </widgets>
</screen>
